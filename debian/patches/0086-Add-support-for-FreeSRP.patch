+    {
+        if(!_buf_queue.try_enqueue(s))
+        {
+	    if(!_ignore_overflow)
+	    {
+		throw runtime_error("RX buffer overflow");
+	    }
+        }
+        else
+        {
+            _buf_num_samples++;
+        }
+    }
+
